import java.io.*;

public class Solution_3_1 {
    public static void main(String[] args) {
        try {
            BufferedReader rd = new BufferedReader(new InputStreamReader(System.in));
            int x = 0;
            int a = Integer.parseInt(rd.readLine());

            while (a>0) {
                x += a;
                --a;
            }

        } catch (Exception e ){ }
	}
}
